{
  "name": "andrasat-web",
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "ssh:git@github.com:andrasat/andrasat-nuxt.git"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint"
  },
  "private": true,
  "scripts": {
    "build:digitalocean": "yarn install --production=false && yarn run build && rm -rf node_modules && yarn install --production --frozen-lockfile",
    "build": "nuxt build",
    "dev": "nuxt dev",
    "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@nuxtjs/eslint-module": "^4.1.0",
    "@nuxtjs/google-fonts": "^3.0.1",
    "@nuxtjs/storybook": "^4.3.2",
    "@nuxtjs/tailwindcss": "^6.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@types/node": "^18",
    "eslint": "^8.41.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "nuxt": "^3.5.2",
    "nuxt-icons": "^3.2.1",
    "semantic-release": "^21.0.3",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "docs/CHANGELOG.md",
              "label": "Changelog"
            }
          ]
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ]
    ]
  }
}